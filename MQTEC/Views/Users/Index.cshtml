@model MQTEC.Models.User;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/css/Login.css" rel="stylesheet" />

<!--Modal: modalCookie-->
<div class="modal fade top" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="true">
    <div class="modal-dialog modal-frame modal-top modal-notify modal-info" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Body-->
            <div class="modal-body">
                <div class="row d-flex justify-content-center align-items-center">
                    <p class="pt-3 pr-2" id="modalText" style="font-family:Montserrat; font-weight:bold"></p>
                </div>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!--Modal: modalCookie-->

<div class="logoEmp" style="margin-top:75px">
    <h1 style="font-size:4.2rem"><img src="~/Images/MqTec.png" alt="Logo MQTEC" style="height:75px">MQTEC</h1>
</div>


<div class="login-box" style="margin-top:5px">

    <h2>Login</h2>
    <form asp-action="Login">
        <div class="user-box">
            <input asp-for="Login" type="text" required="">
            <label>Username</label>
        </div>
        <div class="user-box">
            <input type="password" asp-for="Password" required="">
            <label>Password</label>
            <span asp-validation-for="Password" class="text-white"></span>
        </div>
        <a asp-controller="Users" asp-action="Register">Sign Up</a>
        <span></span>
        <span></span>
        <input type="submit" class="saveBtn" value="Sign in" />
    </form>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        if ('@TempData["value"]' == "isInvalid") {
            document.getElementById('modalText').innerHTML = "The user name or password is incorrect!"
            $("#myModal").modal('show');
        }
    });
</script>



