@model MQTEC.Models.User;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/css/Login.css" rel="stylesheet" />

<!--Modal: modalCookie-->
<div class="modal fade top" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="true">
    <div class="modal-dialog modal-frame modal-top modal-notify modal-info" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Body-->
            <div class="modal-body">
                <div class="row d-flex justify-content-center align-items-center">
                    <p class="pt-3 pr-2" id="modalText" style="font-family:Montserrat"></p>
                </div>
                <a asp-action="Index">Back to Login</a>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!--Modal: modalCookie-->


<div class="login-box">
    <h2>Sign Up</h2>

    <form asp-action="Save">
        <div class="user-box">
            <input asp-for="Name" required="">
            <label>Name</label>
            <span asp-validation-for="Name" class="text-white"></span>
        </div>
        <div class="user-box">
            <input type="text" asp-for="Login" required="">
            <label>Username</label>
            <span asp-validation-for="Login" class="text-white"></span>
        </div>

        <div class="user-box">
            <input type="password" asp-for="Password" required="">
            <label>Password</label>
            <span asp-validation-for="Password" class="text-white"></span>
        </div>

        <a asp-action="Index">Back to Login</a>
        <span></span>
        <span></span>
        <input type="submit" class="saveBtn" value="Sign Up" />

    </form>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script>
     $(document).ready(function (){
    if ('@TempData["value"]' == "Success")
    {
      document.getElementById('modalText').innerHTML = "Success!"
    $("#myModal").modal('show');
    }
    else {
        document.getElementById('modalText').innerHTML = "Please fill all fields"
    $("#myModal").modal('hide');
    }
    });
</script>
