@model IEnumerable<MQTEC.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<link href="~/css/Login.css" rel="stylesheet" />

<style>
    .whiteColor {
        color: white;
    }

    a {
        color: white;
    }
</style>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<link href="~/css/Login.css" rel="stylesheet" />

<h1>Products</h1>

<!--Modal: modalCookie-->
<div class="modal fade top" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="true">
    <div class="modal-dialog modal-frame modal-top modal-notify modal-info" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Body-->
            <div class="modal-body">
                <div class="row d-flex justify-content-center align-items-center">
                    <p class="pt-3 pr-2" id="modalText" style="font-family:Montserrat; color:red">Are you sure you want to delete this?</p>
                </div>
                <input type="submit" id="action" />
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>

<p>
    <a asp-action="Create" style="color:black">
        <i class="material-icons dp48">add</i>
    </a>
</p>
<table class="table table-dark" style="border-radius:10px; background-color:#000000; box-shadow: 0 15px 25px rgba(0,0,0,.6);">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <span class="material-icons">
                            create
                        </span>
                    </a>

                    <a data-toggle="modal" href="#myModal">
                        <span class="material-icons">
                            delete_outline
                        </span>
                    </a>

                    @Html.HiddenFor(c => item.Id, new { @id = "hdnItemId" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $('#action').click(function () {
            var valId = $('#hdnItemId').val();
            $.ajax({
                url: '/Products/Delete',
                method: 'POST',
                contentType: "application/json",
                data: JSON.stringify(valId),
                dataType: "json",
                success: function (data) {
                    if (data) {
                        location.reload(true);
                    }
                },
                error: function (err) {
                    location.reload(true);
                }
            });
        });
    });

</script>
